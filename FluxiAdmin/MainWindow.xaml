<Window x:Class="FluxiAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FluxiAdmin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <Label Content="Email" HorizontalAlignment="Left"/>
                <TextBox Text="{Binding Email}" HorizontalAlignment="Left" Height="33" Width="181"/>
                <Label Content="Password" HorizontalAlignment="Left"/>
                <TextBox Text="{Binding Password}" HorizontalAlignment="Left" Height="33" Width="181"/>
                <Button Content="Valider" Command="{Binding ConnectionCommand}"></Button>
            </StackPanel>
        </GroupBox>
        

    </Grid>
</Window>
